@namespace Tornado.Components.Layout
@inherits LayoutComponentBase
@implements IDisposable
@inject LayoutState LayoutState

<div class="page">
    <header class="topbar">
        <div class="brand">
            <div>
                <div class="brand-title">Tornado Kuberneties Console</div>
                <div class="brand-subtitle">Visual Workload insights.</div>
            </div>
        </div>
        <div class="topbar-actions">
            <button class="theme-toggle icon-button" type="button" data-theme-toggle aria-label="Toggle theme" title="Toggle theme">
                <svg class="theme-icon theme-icon-sun" viewBox="0 0 24 24" aria-hidden="true">
                    <path d="M12 18a6 6 0 1 1 0-12 6 6 0 0 1 0 12zm0-14.5a1 1 0 0 1 1-1h0a1 1 0 0 1 1 1v1.5a1 1 0 0 1-2 0V3.5zm0 15a1 1 0 0 1 1 1v1.5a1 1 0 0 1-2 0V19.5a1 1 0 0 1 1-1zm8.5-6.5a1 1 0 0 1 1-1h1.5a1 1 0 0 1 0 2H21.5a1 1 0 0 1-1-1zM1 12a1 1 0 0 1 1-1h1.5a1 1 0 0 1 0 2H2a1 1 0 0 1-1-1zm16.95 6.45a1 1 0 0 1 1.41 0l1.06 1.06a1 1 0 0 1-1.41 1.41l-1.06-1.06a1 1 0 0 1 0-1.41zM3.58 4.08a1 1 0 0 1 1.41 0l1.06 1.06a1 1 0 0 1-1.41 1.41L3.58 5.49a1 1 0 0 1 0-1.41zm15.78-1.49a1 1 0 0 1 1.41 1.41l-1.06 1.06a1 1 0 1 1-1.41-1.41l1.06-1.06zM4.64 17.5a1 1 0 0 1 1.41 0 1 1 0 0 1 0 1.41l-1.06 1.06a1 1 0 0 1-1.41-1.41l1.06-1.06z" />
                </svg>
                <svg class="theme-icon theme-icon-moon" viewBox="0 0 24 24" aria-hidden="true">
                    <path d="M20.5 15.5A8.5 8.5 0 1 1 8.5 3a9 9 0 0 0 12 12.5z" />
                </svg>
            </button>
            @LayoutState.HeaderContent
        </div>
    </header>

    <main class="content">
        @Body
    </main>

    <footer class="footer">
        <a href="/swagger" class="nav-link">Swagger</a>
    </footer>
</div>

@code {
    protected override void OnInitialized()
    {
        LayoutState.OnChange += StateHasChanged;
    }

    public void Dispose()
    {
        LayoutState.OnChange -= StateHasChanged;
    }
}
