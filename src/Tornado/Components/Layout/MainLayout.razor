@namespace Tornado.Components.Layout
@inherits LayoutComponentBase
@implements IDisposable
@inject LayoutState LayoutState

<div class="page">
    <header class="topbar">
        <div class="brand">
            <span class="brand-mark">T</span>
            <div>
                <div class="brand-title">Tornado Kuberneties Console</div>
                <div class="brand-subtitle">Visual Workload insights.</div>
            </div>
        </div>
        <div class="topbar-actions">
            @LayoutState.HeaderContent
        </div>
    </header>

    <main class="content">
        @Body
    </main>

    <footer class="footer">
        <a href="/swagger" class="nav-link">Swagger</a>
    </footer>
</div>

@code {
    protected override void OnInitialized()
    {
        LayoutState.OnChange += StateHasChanged;
    }

    public void Dispose()
    {
        LayoutState.OnChange -= StateHasChanged;
    }
}
